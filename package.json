{
  "name": "horizon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm db:migrate:deploy && pnpm db:generate && pnpm docs:generate && next build",
    "start": "next start",
    "lint": "eslint",
    "prepare": "husky",
    "shadcn": "pnpm dlx shadcn@latest",
    "docs:generate": "pnpm dlx @rcmade/hono-docs generate --config ./hono-docs.ts",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:restart": "docker compose restart",
    "db:logs": "docker compose logs -f postgres",
    "db:clean": "docker compose down -v",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:reset:seed": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
